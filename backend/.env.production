# Server Configuration
PORT=8080
NODE_ENV=production

# Logging
LOG_LEVEL=combined

# Security
JWT_SECRET=actual_production_secrets_should_never_be_committed_to_git
JWT_EXPIRE=12h
CORS_ORIGIN=https://app.shootingstar.com

# Database
DB_URI=mongodb://productiondb:27017/shooting_star_prod
DB_USER=production_user
DB_PASSWORD=production_password

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100           # Maximum 100 requests per windowMs 